<div class="container">

  <h1 class="mt-5">Edit your booking</h2>

<%= simple_form_for @booking, data: { datepicker_dates_value: @unavailable_dates.to_json } do |f| %>
  <div class="form-inputs mt-5">
    <%= f.input :start_date, as: :string, input_html: {data: { controller: "datepicker", datepicker_dates_value: @unavailable_dates.to_json} }, placeholder: @booking.start_date %>
    <%= f.input :end_date, as: :string, input_html: {data: { controller: "datepicker", datepicker_dates_value: @unavailable_dates.to_json} }, placeholder: @booking.end_date %>
    <%= f.button :submit, "Update Booking", class: "btn btn-outline-dark rounded-pill mt-2" %>
  </div>
<% end %>
</div>
