<div class="container">

  <h2 class="mt-3">Edit <%= @user %>'s booking</h2>

<%= simple_form_for @booking do |f| %>
  <div class="form-inputs">
    <%= f.input :start_date, label: "Booking Start" %>
    <%= f.input :end_date, label: "Booking End" %>
    <%= f.button :submit, "Update Booking", class: "btn btn-primary" %>
  </div>
<% end %>

  <div class="mt-3">
    <%= button_to "Delete my booking", booking_path(@booking), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
  </div>

</div>
