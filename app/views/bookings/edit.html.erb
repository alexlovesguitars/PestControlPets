<div class="container">

  <h1 class="mt-5">Edit your booking</h2>

<%= simple_form_for @booking do |f| %>
  <div class="form-inputs mt-5">
    <%= f.input :start_date, label: "Booking Start" %>
    <%= f.input :end_date, label: "Booking End" %>
    <%= f.button :submit, "Update Booking", class: "btn btn-outline-dark rounded-pill mt-2" %>
    <%= button_to "Delete my booking", booking_path(@booking), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger rounded-pill mt-2" %>
  </div>
<% end %>

  <div class="mt-3">

  </div>

</div>
