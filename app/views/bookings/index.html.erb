<h1>Your Bookings</h1>

<% if @bookings.empty? %>
  <p>You have no bookings yet.</p>
<% else %>
  <% @bookings.each do |booking| %>
    <div class="booking">
      <p><strong>Pet:</strong> <%= booking.pet.name %></p>
      <p><strong>Start Date:</strong> <%= booking.start_date %></p>
      <p><strong>End Date:</strong> <%= booking.end_date %></p>
      <%= link_to 'View Details', booking_path(booking) %> |
      <%= link_to 'Edit', edit_booking_path(booking) %> |
      <%= link_to "Delete", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <%= button_to 'Delete', booking_path(booking), method: :delete, data: { turbo_confirm: 'Are you sure?' } %>
    </div>
  <% end %>
<% end %>

<%= link_to 'Find a new pet', root_path %>
