<div class="container">

  <h1 class="mt-3">Book <%= @pet.name %></h1>

  <%= simple_form_for [@pet, @booking] do |f| %>
    <% if @booking.errors.any? %>
      <div class="errors">
        <h2>Errors:</h2>
        <ul>
          <% @booking.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mt-3">
      <%= f.input :start_date, as: :string, input_html: {data: { controller: "datepicker"} } %>
    </div>

    <div class="mt-3">
      <%= f.input :end_date, as: :string, input_html: {data: { controller: "datepicker"} } %>
    </div>

    <div class="mt-3">
      <%= f.submit "Create Booking", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to 'Back to Home', root_path, class: "btn btn-outline-dark" %>

</div>
