<div class="container mt-3">
  <h2 class="mb-3">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, class: "mt-3" %>
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name" }, class: "mt-3" %>
      <%= f.input :address,
                  required: true,
                  input_html: { autocomplete: "address" }, class: "mt-3" %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" }, class: "mt-3"  %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" }, class: "mt-3"  %>
      <%= f.input :image, as: :file %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, "Join Now!", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
