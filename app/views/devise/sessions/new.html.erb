<div class="container">

  <h2 class="mb-3">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, class: "mt-3" %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, class: "mt-3" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-outline-dark rounded-pill" %>
    </div>
  <% end %>

  <%# <%= render "devise/shared/links" %>

</div>
