<div class="container">
  <div class="header">
    <h1>My pest control pets</h1>
  </div>
  <% if @pets.any? %>
    <div class="add-pet">
      <%= link_to "Add another pet", new_pet_path, class: "btn btn-outline-dark rounded-pill mb-5" %>
    </div>
  <% end %>
  <div class="grid">
    <% if @pets.any? %>
      <% @pets.each do |pet| %>
        <div class="pet-card" >
        <% if pet.photo.attached? %>
          <%= cl_image_tag(pet.photo.key, gravity: "auto", height: 300, width: 300, crop: "auto") %>
        <% else %>
          <span>Hello</span>
        <% end %>
          <h2><%= link_to pet.name.capitalize, pet %></h2>
          <p><%= pet.race.capitalize %></p>
          <p>$<%= pet.price_per_day %> per day</p>
          <p><%= pet.targets.capitalize %></p>

          <div>
            <%= link_to "Edit Pet", edit_pet_path(pet), class: "btn btn-outline-dark rounded-pill mx-3" %>
            <%= link_to "Delete", pet_path(pet), class: "btn btn-danger rounded-pill fw-bold text-white", data: { "turbo-confirm": 'Are you sure?', turbo_method: :delete } %>
          </div>

        </div>
      <% end %>
    <% else %>
      <div class="no-pets-message">
        <p>You don't have any pest control pets yet.</p>
        <%= link_to "Add your first pet", new_pet_path, class: "btn btn-outline-dark rounded-pill" %>
      </div>
    <% end %>
  </div>

</div>
