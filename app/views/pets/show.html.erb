<div class="container">
  <div class="row">
    <div class="pet-show mt-5 col-3 px-0">
      <%= cl_image_tag(@pet.photo.key, gravity: "auto", height: 300, width: 300, crop: "auto") %>
      <div class="mb-3">
        <p><%= @pet.race.capitalize %></p>
        <h1 class="my-0"><%= @pet.name.capitalize %></h1>
        <p>$<%= @pet.price_per_day %>/day</p>
      </div>
      <p><%= @pet.targets %></p>
      <div class="pet-actions">
        <%= link_to "Go Back", root_path, class: "btn btn-outline-dark rounded-pill" %>
        <% if @pet.user == current_user %>
          <%= link_to "Delete", pet_path(@pet), class: "btn btn-danger", data: { "turbo-confirm": 'Are you sure?', turbo_method: :delete } %>
        <% else %>
        <% end %>
      </div>
    </div>
    <div class="pet-actions col-9">
    <% if @pet.user == current_user %>
        <%= link_to "Edit your pet", edit_pet_path(@pet), class: "btn btn-outline-primary rounded-pill my-5" %>
        <p style="font-size: 25px;"><%= @pet.description %></p>
      </div>
      <% else %>
      <div class="pet-actions">
        <%= link_to "Book this pet", new_pet_booking_path(@pet), class: "btn btn-outline-primary rounded-pill mt-5 mb-5" %>
        <div class="mt-4">
          <p style="font-size: 25px;"><%= @pet.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
